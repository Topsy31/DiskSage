{
  "name": "disksage",
  "version": "0.1.0",
  "description": "Smart disk cleanup advisor with risk-based recommendations",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --win portable",
    "build:installer": "vite build && electron-builder --win nsis",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "disk",
    "cleanup",
    "advisor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.disksage.app",
    "productName": "DiskSage",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "portable": {
      "artifactName": "DiskSage.exe"
    }
  }
}
